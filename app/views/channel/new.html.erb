<div class="container_login"> 
    <h1 class="title_login"> Criar conta </h1>
    <form action="/new_channel" method="post" enctype="multipart/form-data">
        <!-- Adiciona token CSRF para seguranÃ§a -->
        <% flash.each do |nome, mensagem| %>
            <div class="<%=nome%>">
                <%=mensagem%>
            </div>
        <% end %>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <div class="form-group mt-3">
            <label for="name">Nome</label>
            <input type="text" class="form-control" id="name" name="channel[name]" placeholder="Nome">
        </div>

        <div class="form-group mt-3">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="channel[email]" placeholder="Email">
        </div>

        <div class="form-group mt-3">
            <label for="password">Senha</label>
            <input type="password" class="form-control" id="password" name="channel[password]" placeholder="Senha">
        </div>

        <div class="form-group mt-3">
            <label for="password_confirmation">Confirmar Senha</label>
            <input type="password" class="form-control" id="password_confirmation" name="channel[password_confirmation]" placeholder="Senha">
        </div>

        <div class="form-group mt-3">
            
            <label for="formFileMultiple" class="form-label">Foto</label>
            <input class="form-control" type="file" id="photo" multiple name="channel[photo]" required accept="image/jpeg, .png"/>
        </div>

        <div class="mt-3">
            <a href="/login" class="btn btn-secondary">Voltar</a>
            <button type="submit" class="btn btn-primary" style="float: right;">Criar</button>
        </div>
    </form>

</div>