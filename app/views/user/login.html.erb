<%= form_with url: '/login', method: :post do |f| %>
    <div class="container_login"> 
        <h1 class="title_login"> Fazer login </h1>
        <form>
            <div class="form-group mt-3">
                <label for="exampleInputEmail1">Email</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                <small id="emailHelp" class="form-text text-muted">Não compartilharemos seu email com ninguém.</small>
            </div>
            <div class="form-group mt-3">
                <label for="exampleInputPassword1">Senha</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Senha">
            </div>
            <div class=" mt-3">
                <a href="/new_user">Criar conta</a>
                <button type="submit" class="btn btn-primary" style="float: right;">Entrar</button>
            </div>
        </form>
    </div>
<% end %>