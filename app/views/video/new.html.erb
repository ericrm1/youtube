<div class="container_login"> 
    <h1 class="title_login"> Cadastrar Vídeo </h1>
    <% flash.each do |nome, mensagem| %>
        <div class="<%=nome%>">
            <%=mensagem%>
        </div>
    <% end %>
    <form action="<%=create_video_path%>" method="post">
        <!-- Adiciona token CSRF para segurança -->
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <div class="form-group mt-3">
            <label for="title">Título</label>
            <input type="text" class="form-control" id="title" name="video[title]" placeholder="Nome">
        </div>

        <div class="form-group mt-3">
            <label for="subtitle">SubTítulo</label>
            <input type="text" class="form-control" id="subtitle" name="video[subtitle]" placeholder="Email">
        </div>

        <div class="form-group mt-3">
            <label for="description">Descrição</label>
            <textarea class="form-control" id="description" name="video[description]" placeholder="Senha">
            </textarea>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary" style="float: right;">Criar</button>
        </div>
    </form>

</div>

